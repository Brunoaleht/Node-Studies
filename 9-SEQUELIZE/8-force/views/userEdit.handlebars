<h1>Editar Users: {{user.name}}</h1>
<form action="/users/update" method="post" class="form">
  {{#with user}}
    <input type="hidden" name="id" value="{{id}}" />
    <div class="form-control">
      <label for="name">Nome:</label>
      <input
        type="text"
        name="name"
        placeholder="Digite o seu nome"
        value="{{name}}"
      />
    </div>
    <div class="form-control">
      <label for="occupation">Profissão:</label>
      <input
        type="text"
        name="occupation"
        placeholder="Digite a sua profissão"
        value="{{occupation}}"
      />
    </div>
    <div class="form-control form-checkbox">
      {{#if newsLetter}}
        <input type="checkbox" name="newsLetter" checked />
      {{else}}
        <input type="checkbox" name="newsLetter" />
      {{/if}}
      <label for="newsLetter">Enviar promoções?</label>
    </div>
    <input type="submit" value="Editar" />
  {{/with}}
</form>