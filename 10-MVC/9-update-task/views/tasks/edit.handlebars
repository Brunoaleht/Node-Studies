{{#with task}}
  <h1>Editando Task: {{title}}</h1>
  <form action="/tasks/edit" method="POST">
    <input type="hidden" name="id" placeholder="O que você vai fazer?" value="{{id}}" />
    <div class="form-control">
      <label for="title">Título:</label>
      <input type="text" name="title" value="{{title}}" />
    </div>
    <div class="form-control">
      <label for="description">Descrição:</label>
      <textarea type="text" name="description" placeholder="Descreva....">{{description}}</textarea>
    </div>
    <input type="submit" value="Editar" />
  </form>
{{/with}}